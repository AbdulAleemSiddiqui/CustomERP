                            <div class="col-md-5">
                                    @Html.DropDownListFor(model => model.Item_Categories, new SelectList(new SfDesk.Models.Item_Category().Item_Category_Get_All(), "Cat_ID", "Cat_Name"), new { @class = "form-control chosen-select,", @readonly = "readonly", @multiple = "true" })
                            </div>
                        </div>*@



                        <div class="form-group">
                            @Html.LabelFor(model => model.Suplier_ID, htmlAttributes: new { @class = "control-label col-md-4" })

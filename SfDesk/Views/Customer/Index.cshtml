                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Province)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone_No)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NTN)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.STRN)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NTN_Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.STRN_Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Transaction_type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Person_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Person_Phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Person_Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Person_Designation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Bank_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Account_No)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IBAN_No)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Opening_Balance)
                                </th>
                            
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer_Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Business_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Incorporation_No)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>

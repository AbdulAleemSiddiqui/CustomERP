@model IEnumerable<SfDesk.Models.Expense>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <button type="button" class="btn btn-primary btn-flat btn-addon m-b-10 m-l-5" onclick="location.href='@Url.Action("Master", "Expense")'"><i class="ti-plus"></i>Create   new </button>
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Ex_NO)

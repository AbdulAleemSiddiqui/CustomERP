@model IEnumerable<SfDesk.Models.Vendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <button type="button" class="btn btn-primary btn-flat btn-addon m-b-10 m-l-5" onclick="location.href='@Url.Action("add", "Vendor")'"><i class="ti-plus"></i>Create   new </button>
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vendor_ID)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Business_Name)
                                </th>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model.Business_Phone_No)
                                </th>


                                <th>
                                    @Html.DisplayNameFor(model => model.Person_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Person_Phone)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Bank_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Bank_Opening_Balance)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Vendor_ID)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Business_Name)
                                    </td>


                                    <td>
                                   
                                        @Html.DisplayFor(modelItem => item.Business_Phone_No)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Person_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Person_Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bank_Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bank_Opening_Balance)
                                    </td>

                                    <td>
                                        <button type="button" class="btn mini btn-primary" onclick="location.href='@Url.Action("Edit", "Vendor",new { id = item.Vendor_ID })'"><i class="ti-pencil"></i> </button>
                                        <button type="button" class="btn mini btn-danger" onclick="ConfirmDelete(@item.Vendor_ID)" })'"><i class="ti-trash"></i> </button>
                                        <button type="button" class="btn mini btn-info" onclick="detail(@item.Vendor_ID)" })'"><i class="ti-notepad"></i> </button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
        <!-- /# card -->
    </div>
    <!-- /# column -->
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

            </div>
        </div>
    </div>

</div>


@section scripts {
    <script>
     function detail (id) {
         $.get('@Url.Action("Detail", "Vendor")', { id: id }, function (data) { $("#myModalContent").html(data); });

          $('#myModal').modal('show');
     };

        function ConfirmDelete(id){
            swal({
                title: "Are you sure to delete ?",
                text: "You will not be able to recover this imaginary file !!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it !!",
                closeOnConfirm: false
            },
                  function () {
                      $.get('@Url.Action("delete", "Vendor")', { id: id },function () { document.location = '/Vendor/index'; })
                      swal("Deleted !!", "Hey, your Vendor has been deleted !!", "success");
                });

       };

    </script>
}

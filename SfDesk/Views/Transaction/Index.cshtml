@model IEnumerable<SfDesk.Models.Transaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <button type="button" class="btn btn-primary btn-flat btn-addon m-b-10 m-l-5" onclick="Add()"><i class="ti-plus"></i>Create   new </button>
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                               
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Charge_Nature)
                                </th>

                                
                                <th>
                                    @Html.DisplayNameFor(model => model.Purchaase_Party_ID)
                                </th>
                                <th>
                                      @Html.DisplayNameFor(model => model.Purchase_ECGS_ID)
                                    </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sales_Party_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sales_Account_ID)
                                </th>
                              
                                <th></th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Charge_Nature)
                                    </td>
                                    
                                     
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Purchaase_Party_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Purchase_ECGS_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sales_Party_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sales_Account_Name)
                                    </td>
                                   
                                   
                                    <td>
                                        <button type="button" class="btn mini btn-info" onclick="Edit(@item.T_ID)" })'"><i class="ti-pencil"></i> </button>
                                        <button type="button" class="btn mini btn-danger" onclick="ConfirmDelete(@item.T_ID)" })'"><i class="ti-trash"></i> </button>
                                        <button type="button" class="btn mini btn-info" onclick="detail(@item.T_ID)" })'"><i class="ti-notepad"></i> </button>
     </td>
                                </tr>
                            }
                            </tbody>

                    </table>
                </div>
            </div>
        </div>
        <!-- /# card -->
    </div>
    <!-- /# column -->
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content" style="width:auto;height:auto; margin-top:auto">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div id='myModalContent'>

            </div>
        </div>
    </div>

</div>


@section scripts {
    <script>
        $('#myModal').on("hidden.bs.modal", function () {
            $("#myModalContent").html("")
        });
         function Edit (id) {
            $.get('@Url.Action("Edit", "Transaction")', { id: id }, function (data) { $("#myModalContent").html(data); });

            $('#myModal').modal('show');
        };
        function Add () {
            $.get('@Url.Action("Add", "Transaction")', function (data) { $("#myModalContent").html(data); });

            $('#myModal').modal('show');
        };
        function ConfirmDelete(id){
            swal({
                title: "Are you sure to delete ?",
                text: "You will not be able to recover this imaginary file !!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it !!",
                closeOnConfirm: false
            },
                  function () {
                      $.get('@Url.Action("delete", "Transaction")', { id: id },function () { document.location = '/Transaction/index'; })
                      swal("Deleted !!", "Hey, your Account has been deleted !!", "success");
                });

       };

    </script>
}

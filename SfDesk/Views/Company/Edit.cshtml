            var c = $("#ye").val().split(" ");
            $("#month").find("option:selected").text(c[0])
            $("#day").find("option:selected").text(c[1]);
            
        });
        $("form").submit(function (e) {
            e.preventDefault();
            var a = $("#month").find("option:selected").text();
            var b = $("#day").find("option:selected").text();
            var c = $("#ye").val();
            $("#ye").val( a +" "+ b);
            var c = $("#ye").val();
            $.post('edit', $(this).serialize(), function () { document.location = '/company/index'; })

        });

    </script>
}

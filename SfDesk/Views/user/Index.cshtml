    @model IEnumerable<SfDesk.Models.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <button type="button" class="btn btn-primary  btn-addon m-b-10 m-l-5" onclick="location.href='@Url.Action("add", "user")'"><i class="ti-plus"></i>Create   new </button>
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.U_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                           
                                <th>
                                    @Html.DisplayNameFor(model => model.State)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyName)
                                </th>
                               <th>
                                   @Html.DisplayName("Roles")


                               </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.U_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    <button type="button" class="btn mini btn-compose" onclick="detail(@item.U_Id)" })'"><i class="ti-user"></i> </button>

                                </td>
                                <td>
                                    <button type="button" class="btn mini btn-primary" onclick="location.href='@Url.Action("Edit", "user",new { id = item.U_Id })'"><i class="ti-pencil"></i> </button>
                                    <button type="button" class="btn mini btn-danger"onclick="ConfirmDelete(@item.U_Id)" })'"><i class="ti-trash"></i> </button>
                                </td>
                            </tr>

                        }
                        </tbody>
                    </table>
                </div>
            </div>
           
            <div id='myModal' class='modal'>
                <div class="modal-dialog modal-lg">
                    <div class="modal-content" style="height:-webkit-fill-available">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"></h4>
                        </div>
                            <div id='myModalContent'>

                            </div>
                        </div>
                </div>

            </div>  
        </div>
        <!-- /# card -->
    </div>
    <!-- /# column -->
</div>

@section scripts {
    <script>
        function detail(id) {
            $.get('@Url.Action("User_Role_Details", "user")', { id: id }, function (data) { $("#myModalContent").html(data); });
            $(".modal-title").text("user ID:" + id + " have following roles")
            $('#myModal').modal('show',1000);   
        };
        $('#myModal').on("hidden.bs.modal", function () {
            $("#myModalContent").html("")
        });
   
        function ConfirmDelete(id){
            swal({
                title: "Are you sure to delete ?",
                text: "You will not be able to recover this imaginary file !!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it !!",
                closeOnConfirm: false
            },
                function () {
                    $.get('@Url.Action("delete", "user")', { id: id }, function () { document.location = '/user/index'; })
                    swal("Deleted !!", "Hey, your User has been deleted !!", "success");
                });
        
       };
        
    </script>
    }

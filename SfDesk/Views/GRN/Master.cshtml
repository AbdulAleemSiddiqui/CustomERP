@model SfDesk.Models.GRN

@{
    ViewBag.Title = "Master";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}

<div class="card alert">
    <div class="card-header">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>GRN</h4>
                    <hr />
                    @Html.HiddenFor(model=>model.PI_ID)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group col-md-4">
                        @Html.HiddenFor(Model => Model.Suplier_ID)
                        @Html.LabelFor(model => model.Suplier_ID, htmlAttributes: new { @class = "control-label col-md-4" })
                        @{
                            var Depart_list = new SfDesk.Models.Vendor().Vendor_Get_All();
                        }
                        <div class="col-md-8">

                            <input type="text" name="Suplier_Name" list="Suplier_List" id="Suplier_Name" class="form-control text-box">
                            <datalist id="Suplier_List" class="control-label col-md-4">

                                @foreach (var item in Depart_list)
                                {
                                    <option id="@item.Vendor_ID" data-id="@item.Vendor_ID" value="@item.Business_Name"></option>
                                }
                            </datalist>
                            @Html.ValidationMessageFor(model => model.Suplier_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-4">

                        @Html.LabelFor(model => model.Trans_NO, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Trans_NO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.HiddenFor(model => model.GRN_NO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GRN_NO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Trans_Date, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Trans_Date, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Trans_Date, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    <div class="form-group col-md-4">

                        @Html.LabelFor(model => model.Due_Date, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Due_Date, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Due_Date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Ref_No, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Ref_No, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ref_No, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Currency, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Currency, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.Exchange_Rate, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Exchange_Rate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Exchange_Rate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div id="child"></div>
                    <div id="child2"></div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
            }

        </div>
    </div>
</div>

@section scripts
{

    <script src="~/assets/js/jsgrid.min.js"></script>
<script src="~/assets/js/TypableDropdown.js"></script>
    <script src="~/assets/js/db.js">
    </script>
    <script>
        DropDown_Fill("Suplier");
        Typable_Dropdown('Suplier');
        $(document).ready(function () {

            $.get('@Url.Action("detail", "grn")', function (data) { $("#child").html(data); });
            $.get('@Url.Action("Detail2", "grn")', function (data) { $("#child2").html(data); });
        });
        $('#myModal').on("hidden.bs.modal", function () {
            $("#myModalContent").html("")
        });

     
        $("form").submit(function (e) {
            e.preventDefault();
            $.post(this.action, $(this).serialize(), function (data) {
                debugger;
                window.location.href = '@Url.Action("Master", "Payment")';

            })
            
        })


    </script>
}
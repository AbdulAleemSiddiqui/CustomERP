@model IEnumerable<SfDesk.Models.ChartOfAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <button type="button" class="btn btn-primary btn-flat btn-addon m-b-10 m-l-5" onclick="Add()"><i class="ti-plus"></i>Create   new </button>
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.COA_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.COA_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Type_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Company_Code)
                                </th>
                            
                               
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.COA_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.COA_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company_Code)
                                    </td>
                                 
                                  
                                    <td>
                                        <button type="button" class="btn mini btn-info" onclick="Edit(@item.COA_ID)" })'"><i class="ti-pencil"></i> </button>
                                        <button type="button" class="btn mini btn-danger" onclick="ConfirmDelete(@item.COA_ID)" })'"><i class="ti-trash"></i> </button>

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
        <!-- /# card -->
    </div>
    <!-- /# column -->
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog" style="float:right">
        <div class="modal-content col-lg-8" style="float:initial; align-content:center">
            <div id='myModalContent'>

            </div>
        </div>
    </div>

</div>

@section scripts {
    <script>
 
        function Edit (id) {
            $.get('@Url.Action("Edit", "Chartofaccount")', { id: id }, function (data) { $("#myModalContent").html(data); });

            $('#myModal').modal('show');
        };
        function Add () {
            $.get('@Url.Action("Add", "Chartofaccount")', function (data) { $("#myModalContent").html(data); });

            $('#myModal').modal('show');
        };
        function ConfirmDelete(id){
            swal({
                title: "Are you sure to delete ?",
                text: "You will not be able to recover this imaginary file !!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it !!",
                closeOnConfirm: false
            },
                  function () {
                      $.get('@Url.Action("delete", "ChartOfAccount")', { id: id },function () { document.location = '/customer/index'; })
                      swal("Deleted !!", "Hey, your Account has been deleted !!", "success");
                });

       };

    </script>
}

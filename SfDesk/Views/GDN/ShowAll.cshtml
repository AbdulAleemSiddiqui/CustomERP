@model IEnumerable<SfDesk.Models.SO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_dashLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card alert">
            <button type="button" class="btn btn-primary btn-flat btn-addon m-b-10 m-l-5" onclick="location.href='@Url.Action("master", "SO")'"><i class="ti-plus"></i>Create   new </button>
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SO_NO)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Delivery_Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Comments)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Customer_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Salesman_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Currency_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Branch_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Transporter_Name)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SO_NO)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Delivery_Date)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comments)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer_Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Salesman_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Currency_Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Branch_Name)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Transporter_Name)
                                    </td>
                                    <td>
                                        <button type="button" class="btn mini btn-primary" onclick="location.href='@Url.Action("MAster", "GDN",new { id = item.SO_ID })'"><i class="ti-pencil"></i> Create GDN </button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
        <!-- /# card -->
    </div>
    <!-- /# column -->
</div>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content" style="height:-webkit-fill-available">
            <div id='myModalContent'>

            </div>
        </div>
    </div>

</div>


@section scripts {


}
